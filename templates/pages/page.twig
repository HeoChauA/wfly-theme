{% extends 'layout.twig' %}

{% block content %}
  {% if post.title %}
    <h1 class="page-title">
      {{ post.title }}
    </h1>
  {% endif %}

  {% for post in posts %}
    <h2 class="post-title"><a href="{{post.link}}">{{ post.title }}</a></h2>
    {{ post.content }}
  {% endfor %}
  {% include 'comments.twig' %}
  {{ function('comment_form') }}
{% endblock %}
