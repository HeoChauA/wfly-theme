{% extends 'layout.twig' %}

{% block content %}
  {% if post.title %}
    <h1 class="page-title">
      {{ post.title }}
    </h1>
  {% endif %}
  
  {% for post in posts %}
    {% if not function('is_page') %}
      {{ post.title }}
    {% endif %}
    {{ post.content }}
  {% endfor %}
{% endblock %}